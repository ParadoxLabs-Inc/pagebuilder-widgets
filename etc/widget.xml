<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="categories_list" class="ParadoxLabs\PageBuilderWidgets\Block\Category\CategoriesList" is_email_compatible="false" placeholder_image="Magento_CatalogWidget::images/products_list.png" ttl="86400">
        <label>Catalog Categories List</label>
        <description>List of Categories</description>
        <parameters>
            <parameter name="title" xsi:type="text" required="false" visible="true">
                <label>Title</label>
            </parameter>
            <parameter name="show_pager" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label>Display Page Control</label>
            </parameter>
            <!-- TODO: Check this, not sure it's used -->
            <parameter name="categories_per_page" xsi:type="text" required="true" visible="true">
                <label>Number of Categories per Page</label>
                <depends>
                    <parameter name="show_pager" value="1"/>
                </depends>
                <value>5</value>
            </parameter>
            <parameter name="categories_count" xsi:type="text" required="true" visible="true">
                <label>Number of Categories to Display</label>
                <value>10</value>
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label>Template</label>
                <options>
                    <option name="default" value="ParadoxLabs_PageBuilderWidgets::category/widget/content/grid.phtml" selected="true">
                        <label>Categories Grid Template</label>
                    </option>
                </options>
            </parameter>
            <parameter name="cache_lifetime" xsi:type="text" visible="true">
                <label>Cache Lifetime (Seconds)</label>
                <description>
                    <![CDATA[Time in seconds between the widget updates.
                    <br/>If not set, equals to 86400 seconds (24 hours). To update widget instantly, go to Cache Management and clear Blocks HTML Output cache.
                    <br/>Widget will not show products that begin to match the specified conditions until cache is refreshed.]]>
                </description>
            </parameter>
            <parameter name="category_ids" xsi:type="text" visible="true">
                <label>Category IDs</label>
            </parameter>
            <parameter name="condition" xsi:type="conditions" visible="true" class="Magento\CatalogWidget\Block\Product\Widget\Conditions">
                <label>Conditions</label>
            </parameter>
        </parameters>
        <containers>
            <container name="content">
                <template name="grid" value="default"/>
            </container>
            <container name="content.top">
                <template name="grid" value="default"/>
            </container>
            <container name="content.bottom">
                <template name="grid" value="default"/>
            </container>
        </containers>
    </widget>
</widgets>
